<div class="page-header"> 
  <h1 class="text-primary">Listing Files from <%=@account_info['name_details/familiar_name']%>'s Dropbox</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th class="text-primary">File Name</th>
      <th class="text-primary">Last Modified</th>
      <th colspan="0"></th>
    </tr>
  </thead>
  <tbody>
    <%if(@entry['is_dir'])%>
        <%@entry['contents'].each do |child|%>
        <%@cp = child['path']      # child path%>
        <%@cn = File.basename(@cp)  # child name%>
        <%time=DateTime.strptime(child['modified'],"%a, %d %b %Y %H:%M:%S %z")%>
        <%if (child['is_dir']) then @cn += '/' end# adds another slash after the path if it's a folder to differentiate between files%>
        <tr><td class="text-primary"><%=@cn%></td>
        <td class= "text-primary"><%=time.strftime("%m/%d/%Y %H:%M")%></td><td>
        <%if (child['is_dir']) then%>
          <%=link_to "browse this directory", dropbox_listfiles_path(path: @cp), class: 'btn btn-primary'%>
        <%else%>
          <%=link_to "download this file", dropbox_download_path(path: @cp), class: 'btn btn-success'%>
        <%end%>
        </td></tr>
    <%end%>
    <%else%>
        <tr><td class='text-primary'>File : <%=@entry.inspect%></td></tr>
    <%end%>
    
  </tbody>
  </table>
  <%=link_to 'Upload a File', dropbox_main_path,  class: "btn btn-success"%>
  <%=link_to 'Logout', dropbox_dropsession_path, class: "btn btn-warning"%>